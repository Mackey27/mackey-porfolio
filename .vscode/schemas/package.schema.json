{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Local npm package schema (offline-friendly)",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type": "string" },
    "private": { "type": "boolean" },
    "type": { "enum": ["commonjs", "module"] },
    "scripts": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" }
    },
    "author": {
      "anyOf": [
        { "type": "string" },
        { "type": "object" }
      ]
    },
    "license": { "type": "string" },
    "dependencies": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "devDependencies": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "peerDependencies": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "engines": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "required": ["name", "version"],
  "additionalProperties": true
}
